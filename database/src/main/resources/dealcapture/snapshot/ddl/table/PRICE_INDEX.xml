<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        logicalFilePath="/com/onbelay/dealcapture/snapshot/ddl/PRICE_INDEX.xml">

    <changeSet author="lefeuvrem" id="1.0" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

        <createSequence
                incrementBy="1"
                sequenceName="PRICE_INDEX_SEQ"
                startValue="1"
        />


        <createTable tableName="PRICE_INDEX" tablespace="${tblspace_data}">
            <column name="ENTITY_ID" defaultValueSequenceNext="PRICE_INDEX_SEQ" type="java.sql.Types.NUMERIC(10, 0)">
                <constraints primaryKey="true" primaryKeyName="PRICE_INDEX_PK" nullable="false"/>
            </column>
            <column name="INDEX_TYPE_CODE" type="java.sql.Types.VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="CURRENCY_CODE" type="java.sql.Types.VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="UNIT_OF_MEASURE_CODE" type="java.sql.Types.VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="FREQUENCY_CODE" type="java.sql.Types.VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="INDEX_NAME" type="java.sql.Types.VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="BENCH_PRICE_INDEX_ID" type="java.sql.Types.NUMERIC(10, 0)">
                <constraints nullable="true"/>
            </column>
            <column name="BASE_PRICE_INDEX_ID" type="java.sql.Types.NUMERIC(10, 0)">
                <constraints nullable="true"/>
            </column>
            <column name="PRICING_LOCATION_ID" type="java.sql.Types.NUMERIC(10, 0)">
                <constraints nullable="false"/>
            </column>
            <column name="OFFSET_EXPIRY_DAYS" type="java.sql.Types.NUMERIC(2, 0)">
                <constraints nullable="true"/>
            </column>
            <column name="INDEX_DESCRIPTION" type="java.sql.Types.VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="OPTIMISTIC_LOCK_NO" remarks="Version number." defaultValueNumeric="0"
                    type="java.sql.Types.NUMERIC(10, 0)">
                <constraints nullable="false"/>
            </column>
            <column name="EXPIRED_FLG" remarks="logical delete Y or N" type="java.sql.Types.CHAR(1)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
