<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        logicalFilePath="/com/onbelay/dealcapture/snapshot/ddl/FX_CURVE.xml">

    <changeSet author="lefeuvrem" id="1.0" objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

        <createSequence
                incrementBy="1"
                sequenceName="FX_CURVE_SEQ"
                startValue="1"
        />


        <createTable tableName="FX_CURVE" tablespace="${tblspace_data}">
            <column name="ENTITY_ID"
                    defaultValueSequenceNext="FX_CURVE_SEQ"
                    type="java.sql.Types.NUMERIC(10, 0)">
                <constraints primaryKey="true" primaryKeyName="FX_CURVE_PK" nullable="false"/>
            </column>
            <column name="FX_INDEX_ID"
                    type="java.sql.Types.NUMERIC(10, 0)">
                <constraints nullable="true"/>
            </column>
            <column name="FREQUENCY_CODE"
                    type="java.sql.Types.VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="CURVE_DATE"
                    type="java.sql.Types.TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="HOUR_ENDING"
                    type="java.sql.Types.NUMERIC(3, 0)">
                <constraints nullable="false"/>
            </column>
            <column name="CURVE_VALUE"
                    type="java.sql.Types.NUMERIC(6, 3)">
                <constraints nullable="true"/>
            </column>
            <column name="OBSERVED_DATE_TIME"
                    type="java.sql.Types.TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="OPTIMISTIC_LOCK_NO"
                    defaultValueNumeric="0"
                    type="java.sql.Types.NUMERIC(10, 0)">
                <constraints nullable="false"/>
            </column>
            <column name="EXPIRED_FLG"
                    type="java.sql.Types.CHAR(1)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
