<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
	http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        logicalFilePath="/com/onbelay/dealcapture/changes/ISSUE_001/Update_PHYSICAL_POSITION_Columns.xml"
>
    <changeSet
            author="lefeuvrem"
            id="1.0"
    >
        <dropColumn
            tableName="PHYSICAL_POSITION"
            columnName="PRICING_INDEX_ID"
        />

    </changeSet>

    <changeSet
            author="lefeuvrem"
            id="2.0"
    >
        <addColumn
                tableName='PHYSICAL_POSITION'
        >
            <column
                    name='VOLUME_UOM_CODE'
                    type="java.sql.Types.VARCHAR(32)"
            >
                <constraints nullable='true'/>
            </column>
        </addColumn>
        <addColumn
                tableName='PHYSICAL_POSITION'
        >
            <column
                    name='DEAL_PRICE_INDEX_ID'
                    type="java.sql.Types.NUMERIC(10, 0)"
            >
                <constraints nullable='true'/>
            </column>
        </addColumn>
        <addColumn
                tableName='PHYSICAL_POSITION'
        >
            <column
                    name='MARKET_INDEX_ID'
                    type="java.sql.Types.NUMERIC(10, 0)"
            >
                <constraints nullable='true'/>
            </column>
        </addColumn>
    </changeSet>
</databaseChangeLog>